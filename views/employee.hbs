<div class="row">
    <div class="col-md-12">
        <h1> {{data.firstName}}&nbsp;{{data.last_name}} - Employee: {{data.employeeNum}}</h1>
        <form method="post" action="/employee/update">
            <input type="hidden" name="employeeNum" value="{{data.employeeNum}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{data.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{data.last_name}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="text" value="{{data.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" id="SSN" name="SSN" type="text" value="{{data.SSN}}" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="aStreet">Address (Street):</label>
                            <input class="form-control" id="aStreet" name="aStreet" type="text" value="{{data.aStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="aCity">Address (City):</label>
                        <input class="form-control" id="aCity" name="aCity" type="text" value="{{data.aCity}}" />
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="aState">Address (State):</label>
                            <input class="form-control" id="aState" name="aState" type="text" value="{{data.aState}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="aPostal">Address (Zip Code):</label>
                            <input class="form-control" id="aPostal" name="Postal" type="text" value="{{data.aPostal}}" />
                        </div>
                    </div>
                </div>


            </fieldset>

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            {{#if data.isManager}}
                            <input class="form-control" type="checkbox" id="isManager" name="isManager" checked />
                            {{else}}
                            <input class="form-control" type="checkbox" id="isManager" name="isManager" />
                            {{/if}}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value="{{data.employeeManagerNum}}"/>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br />
                                {{#equal data.status "Full Time"}}
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusFullTime" name="status" value="FullTime" checked="" /> Full Time
                                </label>
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusPartTime" name="status" value="PartTime"  /> Part Time
                                </label>
                                {{/equal}}
                                {{#equal data.status "Part Time"}}
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusFullTime" name="status" value="FullTime"  /> Full Time
                                </label>
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusPartTime" name="status" value="PartTime" checked="" /> Part Time
                                </label>
                                {{/equal}}
                                {{#unless data.status}}
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusFullTime" name="status" value="FullTime"  /> Full Time
                                </label>
                                <label  class="checkbox-inline">
                                    <input type="radio" id="statusPartTime" name="status" value="PartTime" /> Part Time
                                </label>
                                {{/unless}}
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            <select class="form-control" name="department" id="department">
                                {{#equal data.department ""}}
                                    <option value="">Choose</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "1"}}
                                    <option value="1" selected>1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "2"}}
                                    <option value="1">1</option>
                                    <option value="2" selected>2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "3"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3"selected>3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "4"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4" selected>4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "5"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5" selected>5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "6"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6" selected>6</option>
                                    <option value="7">7</option>
                                {{/equal}}
                                {{#equal data.department "7"}}
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7" selected>7</option>
                                {{/equal}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{data.hireDate}}" readonly />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>